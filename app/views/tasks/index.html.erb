<div class="container">
  <h1>All the tasks:</h1>
  <%= link_to "add a task", tasks_new_path, :class => "btn btn-light" %>
  <% @tasks.each do |task| %>
    <div class="card">
      <p><%= task.title %></p>
      <%= link_to "view details", task_path(task), :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
