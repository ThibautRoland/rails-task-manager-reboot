<div class="container">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <% if @task.completed %>
    <i class="fa-solid fa-square-check"></i>
  <% else %>
    <i class="fa-regular fa-square-check"></i>
  <% end %>


  <%= link_to "edit this task", edit_path(@task), :class => "btn btn-info" %>
  <%= link_to "delete this task", task_path(@task), :class => "btn btn-danger", data: { turbo_method: 'DELETE', turbo_confirm: "Are you sure?"} %>
  <%= link_to "back to index", tasks_path, :class => "btn btn-primary" %>
</div>
